{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".", 

    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["../../packages/shared/*"]
    },
    
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}